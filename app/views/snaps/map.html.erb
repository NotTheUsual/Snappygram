<script type="text/javascript"
  src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_KEY'] %>&sensor=false">
</script>
<script type="text/javascript">
  function initialize() {
    var mapOptions = {
      center: new google.maps.LatLng(20, 10),
      zoom: 2
    };
    var map = new google.maps.Map(document.getElementById("map-canvas"),
        mapOptions);

    <% @snaps.each_with_index do |snap, i| %>
      var marker<%= i %> = new google.maps.Marker({
        position: new google.maps.LatLng(<%= snap.latlong %>),
        map: map,
        animation: google.maps.Animation.DROP,
        title:"<%= snap.description %>"
      });

      var contentString<%= i %> = '<div id="content">'+
        '<%= link_to image_tag(snap.image.url(:thumb)), snap_path(snap), class: "map-image-link" %>'+
        '<%= link_to snap.user.username, user_path(snap.user), class: "map-user-link" %>'+
        '<p><%= snap.description %></p>'+
        '</div>';

      var infowindow<%= i %> = new google.maps.InfoWindow({
        content: contentString<%= i %>,
        maxWidth: 200
      });

      google.maps.event.addListener(marker<%= i %>, 'click', function() {
        infowindow<%= i %>.open(map,marker<%= i %>);
      });
    <% end %>
  }
  google.maps.event.addDomListener(window, 'load', initialize);
</script>
<style>
  html, body, main, #map-canvas {
    height: 100%;
    width: 100%;
    margin: 0px;
    padding: 0px
  }

  main {
    margin-top: 4em;
  }

  #map-canvas div.gm-style-iw {
    overflow: visible !important; 
  }

  #map-canvas div.gm-style-iw > div {
    overflow: visible !important; 
  }

  #map-canvas div.gm-style-iw a.map-user-link {
    display: block;
    text-align: left;
    margin: 0.5em 0;
  }

  #map-canvas div.gm-style-iw p {
    color: #000;
    text-align: left;
    margin: 0.5em 0;
  }
</style>

<div id="map-canvas" style="width:100%;height:100%;"/>