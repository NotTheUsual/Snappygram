<%= form_for @snap, :html => { :multipart => true } do |form| %>
  <%= form.label :image %>
  <%= form.file_field :image %>
  <%= form.label :description, class: 'hidden' %>
  <%= form.text_field :description, placeholder: 'Description' %>
  <%= form.label :tags, class: 'hidden' %>
  <%= form.text_field :tags, value: nil, id: "tag-field" %>
  <%= form.submit 'Upload', class: 'button' %>
<% end %>