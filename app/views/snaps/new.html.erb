<%= form_for @snap, :html => { :multipart => true } do |form| %>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <%= form.label :image %>
  <%= form.file_field :image %>
  <%= form.label :tags %>
  <%= form.text_field :tags, value: nil, id: "tag-field" %>
  <%= form.submit 'Upload' %>
<% end %>